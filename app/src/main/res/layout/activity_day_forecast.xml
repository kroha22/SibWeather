
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.DayForecastActivity">

    <TextView
        android:id="@+id/activity_day_forecast_text_view_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h2_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activity_day_forecast_text_view_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_day_forecast_text_view_city"
        android:text="@string/day_of_week"
        android:textSize="@dimen/h2_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activity_day_forecast_text_view_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_day_forecast_text_view_day"
        android:text="@string/date"
        android:textSize="@dimen/h3_size" />

    <ListView
        android:id="@+id/activity_day_forecast_list_view_forecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_day_forecast_text_view_date" />

</RelativeLayout>
